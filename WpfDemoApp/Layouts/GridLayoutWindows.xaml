<Window x:Class="WpfDemoApp.Layouts.GridLayoutWindows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoApp.Layouts"
        mc:Ignorable="d"
        Title="GridLayoutWindows" Height="300" Width="300">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="95*"/>
            <ColumnDefinition Width="98*"/>
            <ColumnDefinition Width="97*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="1" Grid.Row="0" Margin="3.361,10,15,20">First</Button>
        <Button Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" Height="40" Width="120" Margin="37,25,38,25">Second</Button>
        <Button Grid.Column="3" Grid.Row="2">Third</Button>

    </Grid>
</Window>
