<Window x:Class="WpfDemoApp.Layouts.StackPanelLayoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoApp.Layouts"
        mc:Ignorable="d"
        Title="StackPanelLayoutWindow" Height="300" Width="300">
    <StackPanel>

        <Button>One</Button>
        <Button>Two</Button>
        <Button>Three</Button>
        <!--<Border>-->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Button>First</Button>
            <Button Margin="3,5">Second</Button>
            <Button>Third</Button>
            <Border BorderBrush="Red" BorderThickness="3" CornerRadius="3">
                <Button>Fourth</Button>
            </Border>
                    <Button>Fifth</Button>
        </StackPanel>
    </StackPanel>
</Window>

    